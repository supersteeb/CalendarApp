<div class="ui container">
  <div class="ui center aligned grid">
    <div class="six wide left aligned column">
      <div class="ui segment" id="login_box">
        <h3 class="ui header">
          <i class="lock icon"></i>
          Admin Login
        </h3>
        <div class="ui divider"></div>
        <%= form_for(resource,
               as: resource_name,
               url: session_path(resource_name),
               html: {class:'ui form'}) do |f| %>
          <div class="field">
            <%= f.email_field :email,
                              autofocus: true,
                              placeholder:'Email' %>
          </div>

          <div class="field">
            <%= f.password_field :password,
                                 autocomplete: "off",
                                 placeholder:'Password' %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <div class="ui checkbox">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            </div>
          <% end -%>
          <div class="field">
            <button type="submit" class="ui green small fluid button">
              Log in
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
