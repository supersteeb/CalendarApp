<%= form_for(defaultitem = Defaultitem.new, html: {class:'ui form'}) do |f| %>
	<div class="field">
		<label>Task Name:</label>
		<%= f.text_field :name, placeholder: "Ex: Go to shopping" %>
	</div>
	<div class="field">
		<label>Description:</label>
		<%= f.text_area :desc, placeholder: 'Ex: Buy some chick..en', rows: 3 %>
	</div>
	<div class="field">
		<label for="">Frequency (Default is daily):</label>
		<% @date_range.each do |date| %>
			<div class="ui frequency checkbox">
	      <%= check_box_tag 'defaultitem[frequency][]',
	      									t(date),
	      									true,
	      									id: "freq_#{date}" %>
	      <label><%= date.titleize %></label>
	    </div>
	  <% end %>
	</div>
	<div class="ui divider"></div>
  <div class="ui grid">
  	<div class="sixteen wide right aligned column">
  		<button type="submit" class="ui teal small button">
	  		Add Default Task
	  	</button>
  	</div>
  </div>
<% end %>
