.fc-event, .fc-event-dot {
	background-color: transparent;
  padding: 30px 20px !important;
  margin-top: -55px !important;
  background: url('<%= asset_path 'cross-sign.svg' %>');
  background-repeat: no-repeat;
  background-position: 50% 50%;
  font-size: 0;
  border: none;
  background-size: 30%;
  transform: translateY(50%);
}
.fc-unthemed td.fc-today {
  background: transparent;
}
.fc-head-container .fc-widget-header {
  padding: 5px 0;
}
.fc-basic-view .fc-day-number, .fc-basic-view .fc-week-number {
  padding: 10px;
  font-size: 1.25em;
}
#main_container {
  padding: 2em;
	.pointing.menu {
    margin-top: 20px;
  }
  #todolist {
    margin-top: 20px;
    .item {
      padding: 1em 0;
      a {
        font-weight: 500;
      }
      .genderless.icon {
        &:before {
          margin-left: 2px;
        }
      }
      .icon {
        margin-right: 10px;
      }
    }
  }
}

.ui.frequency.checkbox {
  width: 24%;
}
.logo {
  height: 25px;
  margin-right: 10px!important;
}
.fc-basic-view .fc-body .fc-row { min-height: 45px; }

.three.column {
  .fc-event, .fc-event-dot {
    background-color: transparent;
    background-repeat: no-repeat;
    background-position: 50% 50%;
    font-size: 0;
    border: none;
    background-size: 50%;
    transform: translateY(50%);
  }
  .fc-basic-view .fc-day-number, .fc-basic-view .fc-week-number {
    padding: 2px;
    font-size: 0.9em;
  }
}
#login_box {
  padding: 2em 4em;
  position: absolute;
  margin-top: 50vh;
  transform: translateY(-50%);
  h3.ui.header {
    font-weight: 200!important;
    text-transform: uppercase;
  }
}
